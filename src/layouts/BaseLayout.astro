---
import "../styles/globals.css";
import { UserMenu } from "../components/navigation/UserMenu";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Track your gym workouts with GymRatPlanner" } = Astro.props;
const { user } = Astro.locals;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | GymRatPlanner</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="h-full bg-background text-foreground antialiased">
    <div class="flex min-h-full flex-col">
      <header
        class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
      >
        <div class="container flex h-14 items-center">
          <div class="mr-4 flex">
            <a href="/" class="mr-6 flex items-center space-x-2">
              <span class="font-bold">GymRatPlanner</span>
            </a>
          </div>
          <nav class="flex flex-1 items-center justify-between space-x-2 md:justify-end">
            <slot name="nav" />
            {user && <UserMenu userEmail={user.email} client:load />}
          </nav>
        </div>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t py-6 md:py-0">
        <div class="container flex flex-col items-center justify-between gap-4 md:h-14 md:flex-row">
          <p class="text-sm leading-loose text-muted-foreground md:text-left">
            Built with Astro, React, and Tailwind CSS
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
